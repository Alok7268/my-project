{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": false,
      "jsx": "react-jsx",
      "baseUrl": "./src", //For absolute imports, e.g. import Component from "components/Component"
      "paths": {
        "@/*": ["./*"] //To make @ available as a shorter notation for ./src
      },
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }